<%-include("header")-%>
<div class="box" id="heading">
  <h1>Please register</h1>
</div>
<div class="box">
    <form action="/register" method="post" class="signin">

      <input type="email" name="username" placeholder="Email address" required autocomplete="false" class="form-control input-mail input-register">

      <input type="password" name="password" placeholder="Password" required class="form-control input-register input-pass">
      <div class="checkbox mb-3">
          <input type="checkbox" value="remember-me"/> Remember me
      </div>
      <button type="submit" class="btn btn-lg btn-block btn-register" >Register</button>
  </form>
</div>
<%-include("footer")-%>
